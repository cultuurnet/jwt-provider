{
    "name": "cultuurnet/jwt-provider",
    "description": "Silex application that provides JSON Web Tokens",
    "type": "project",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Publiq vzw",
            "email": "info@publiq.be"
        }
    ],
    "require": {
        "php": "^7.4",
        "aura/session": "^2.1",
        "filp/whoops": "^2.5",
        "guzzlehttp/psr7": "^1.3",
        "hassankhan/config": "^2.1",
        "league/container": "^3.3",
        "league/route": "^4.3",
        "monolog/monolog": "^1.11",
        "slim/psr7": "^1.4",
        "symfony/yaml": "^4.3",
        "auth0/auth0-php": "^5.7",
        "beberlei/assert": "^3.2",
        "cultuurnet/culturefeed-php": "^1.10",
        "cultuurnet/udb3-api-guard": "^v4.0.0",
        "php-http/message-factory": "^1.1",
        "laminas/laminas-httphandlerrunner": "^2.2",
        "sentry/sdk": "^4.0"
    },
    "require-dev": {
        "publiq/php-cs-fixer-config": "^1.3",
        "jangregor/phpstan-prophecy": "^1.0",
        "phpunit/phpunit": "^9.6",
        "phpspec/prophecy-phpunit": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "CultuurNet\\UDB3\\JwtProvider\\": ["app/", "src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CultuurNet\\UDB3\\JwtProvider\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "config": {
        "preferred-install": {
            "cultuurnet/*": "source",
            "*": "dist"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse",
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "ci": [
            "composer cs",
            "composer phpstan",
            "composer test"
        ]
    }
}
